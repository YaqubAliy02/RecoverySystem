# Base image for building
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src

# Copy csproj and restore dependencies
COPY ["RecoverySystem.CaseService.csproj", "./"]
RUN dotnet restore "RecoverySystem.CaseService.csproj"

# Copy all files and build
COPY . .
RUN dotnet build "RecoverySystem.CaseService.csproj" -c Release -o /app/build

# Publish the application
FROM build AS publish
RUN dotnet publish "RecoverySystem.CaseService.csproj" -c Release -o /app/publish /p:UseAppHost=false

# Final image
FROM mcr.microsoft.com/dotnet/aspnet:9.0 AS final
WORKDIR /app
COPY --from=publish /app/publish .
EXPOSE 80
EXPOSE 443
ENTRYPOINT ["dotnet", "RecoverySystem.CaseService.dll"]